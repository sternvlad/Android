<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_popup"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/popup_despre_calator"
        android:orientation="vertical"

        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/titlu_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
        	android:layout_marginLeft="25dp"
            android:text="@string/description"
            android:textSize="15sp"
            android:textStyle="bold" />

        
        
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
            
            

        <TableLayout
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" >
            
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/arrow_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/arrow_rosu" />

            <TextView
                android:id="@+id/reduceri"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="@string/i11"
                android:textColor="@color/MenuDarkGrey"
                android:textSize="13sp" />
        </LinearLayout>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/checkelev"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_radio_calatorie"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:text="@string/i2"
                    android:textColor="@color/MenuDarkGrey"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checksport"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_radio_calatorie"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:text="@string/i3"
                    android:textColor="@color/MenuDarkGrey"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkgradinv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_radio_calatorie"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:text="@string/i4"
                    android:textColor="@color/MenuDarkGrey"
                    android:textSize="12sp" />
                
                </TableRow>
                
            <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

            <ImageView
                android:id="@+id/arrow_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/arrow_rosu" />
            
        <TextView
            android:id="@+id/i0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:text="@string/i0"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="13sp" />
        </LinearLayout>
                
                <TableRow
                    android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/checkbolicadio"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_radio_calatorie"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:text="@string/i5"
                    android:textColor="@color/MenuDarkGrey"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkbolineuro"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_radio_calatorie"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:text="@string/i6"
                    android:textColor="@color/MenuDarkGrey"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkboliinterne"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_radio_calatorie"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:text="@string/i7"
                    android:textColor="@color/MenuDarkGrey"
                    android:textSize="12sp" />
                
                </TableRow>
                
                <TableRow
                    android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/checkboliaparat"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_radio_calatorie"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:text="@string/i8"
                    android:textColor="@color/MenuDarkGrey"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkbolidef"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_radio_calatorie"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:text="@string/i9"
                    android:textColor="@color/MenuDarkGrey"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkalteboli"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_radio_calatorie"
                    android:button="@color/transparent"
                    android:gravity="center"
                    android:text="@string/i10"
                    android:textColor="@color/MenuDarkGrey"
                    android:textSize="12sp" />
                </TableRow>
            
            </TableLayout>
            </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/ok_button_calator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ok_button_calatorie"
            android:paddingLeft="30dp"
            android:text="OK"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>