<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    



                    <RelativeLayout
          android:id="@+id/asigurare"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/description"
                android:src="@drawable/header_mesajul_tau" />

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/imageView1" >
            
            <TextView
                android:id="@+id/text_header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i715"
                android:textColor="@color/galben_mesaj"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/text_header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i716"
                android:layout_marginLeft="5dp"
               android:textColor="@color/ColorTitlu"
                android:textSize="26sp" />
            
            </LinearLayout>

            <TextView
                android:id="@+id/text_header3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lay1"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_toLeftOf="@+id/imageView1"
                android:text="@string/i717"
                android:textColor="@color/MenuLightGrey"
                android:textSize="13sp" />
        </RelativeLayout>
            		    
            		    
            <View
        		android:layout_width="match_parent"
        		android:layout_height="1dp"
        		android:background="#C9C9C9" />
            


<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
            
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        
        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/i25"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/edt_emailul_tau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/edit_text"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/ColorTitlu"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/i26"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/edt_nr_telefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:gravity="left"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/ColorTitlu"
            android:textSize="18sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/textSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/i27"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/edt_subiect_mesaj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/edit_text"
            android:gravity="left"
            android:hint="..."
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/ColorTitlu"
            android:textSize="18sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/textMesaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/i29"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/edt_mesajul_tau"
            android:background="@drawable/edit_text"
            android:paddingTop="5dp"
            android:textColor="@color/ColorTitlu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="10"
            android:minLines="3"
            android:inputType="textMultiLine|textCapSentences"
            android:textStyle="bold"
            android:gravity="top"
            android:layout_margin="1dp"
            android:paddingLeft="5dp"
            android:textSize="15sp" />
        
        			<Button
		        android:id="@+id/btn_trimite"
		        android:layout_width="200dp"
		        android:layout_gravity="center"
		        android:layout_height="60dp"
		        android:background="@drawable/trimite_mesaj_buton"
		        android:text="@string/i30" 
		        android:textStyle="bold"
		        android:layout_marginTop="5dp"
		        android:paddingLeft="50dp"
		        android:textSize="20sp"/>

    </LinearLayout>
    
    </ScrollView>

</LinearLayout>