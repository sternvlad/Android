<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    

    <LinearLayout
        android:id="@+id/main_top"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/main_top" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" >

                              <View
                        android:id="@+id/view1"
				        android:layout_width="match_parent"
				        android:layout_height="2dp"
				        android:layout_marginTop="0dp"
				        android:background="@color/albastru_locuinta" />
            


            <RelativeLayout
          android:id="@+id/asigurare"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/description"
                android:src="@drawable/asig_locuinte" />

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/imageView1"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_header2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/i792"
                    android:textColor="@color/MenuLightGrey"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/text_header3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="@string/i793"
                    android:textColor="@color/MenuLightGrey"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lay1"
                android:layout_alignLeft="@+id/lay1"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="@string/i791"
                android:textColor="@color/albastru_locuinta"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>
        
               <View
                    android:id="@+id/view2"
			        android:layout_width="match_parent"
			        android:layout_height="2dp"
			        android:layout_marginTop="0dp"
			        android:background="@color/albastru_locuinta" />
            
            <View
       			android:layout_width="match_parent"
        		android:layout_height="1dp"
        		android:background="#C9C9C9" />

            <TextView
                android:id="@+id/tv_asig_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/ColorTitlu"
                android:text="Asigurare locuinta"
                android:textSize="20sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:paddingLeft="20dp"
                    android:src="@drawable/icon_foto_casa" />

              

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="80dp" >

                <ImageView
                    android:id="@+id/image_arrow_locuinta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/arrow_locuinta" />
                
                <TextView
                    android:id="@+id/suma_asig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:text="suma asigurata :1300000 EUR" />
                
                
                </LinearLayout>
                
                
                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="80dp" >
                
                <ImageView
                    android:id="@+id/image_arrow_locuinta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:layout_marginTop="3dp"
                    android:src="@drawable/arrow_locuinta" />

                <TextView
                    android:id="@+id/tv_suprafata_structura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:text="400 mp,beton" />
                
				</LinearLayout>
				
                 
                  <LinearLayout
                    android:id="@+id/nr_pers_calatorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="80dp" >
                
                <ImageView
                    android:id="@+id/image_arrow_calatorie1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:layout_marginTop="3dp"
                    android:src="@drawable/arrow_calatorie" />

                <TextView
                    android:id="@+id/tv_numar_persoane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:text="400 mp,beton" />
                
				</LinearLayout>

            </RelativeLayout>
            
             <View
       			android:layout_width="match_parent"
        		android:layout_height="1dp"
        		android:background="#C9C9C9" />
            
            <TextView
                android:id="@+id/nume_asigurat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:text="nume"
                android:textSize="20sp"
                android:textColor="@color/ColorTitlu"
                android:textStyle="bold"/>
            

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:paddingLeft="20dp"
                    android:src="@drawable/icon_foto_person" />
                
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="80dp" >

                <ImageView
                    android:id="@+id/image_arrow_locuinta3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/arrow_locuinta" />

                <TextView
                    android:id="@+id/cnp_asigurat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:text="cnp" />
                
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="80dp" >
                
                <ImageView
                    android:id="@+id/image_arrow_locuinta4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/arrow_locuinta" />

                <TextView
                    android:id="@+id/judloc_asigurat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:text="jud loc" />
                
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/serie_calatorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    android:visibility="gone"
                    android:layout_marginLeft="80dp" >
                
                <ImageView
                    android:id="@+id/image_arrow_calatorie2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/arrow_calatorie" />

                <TextView
                    android:id="@+id/text_serie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:text="jud loc" />
                </LinearLayout>

            </RelativeLayout>
            
             <View
       			android:layout_width="match_parent"
        		android:layout_height="1dp"
        		android:background="#C9C9C9" />
            
             <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

             
            <TextView
                android:id="@+id/pret_asigurare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:text="1203.00 EUR"
                android:textSize="20sp"
                android:textColor="@color/ColorTitlu"
                android:textStyle="bold"/>

            
            </RelativeLayout>
            

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

			<ImageView
            	android:id="@+id/image_firma_asig"
            	android:layout_width="110dp"
            	android:layout_height="42dp"
            	android:layout_marginTop="10dp"
            	android:layout_marginLeft="10dp"
            	android:layout_centerVertical="true"
            	android:src="@drawable/omniasig" />

				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_alignParentTop="true"
				    android:layout_marginRight="14dp"
				    android:orientation="vertical" >

				    <Button
				        android:id="@+id/btn_conditii_pdf"
				        android:layout_width="130dp"
				        android:layout_height="41dp"
				        android:background="@drawable/conditii_asigurare_pdf"
				        android:paddingLeft="45dp"
				        android:text="@string/i169"
				        android:textColor="@color/ColorTitlu"
				        android:textSize="12sp" />
				    
				    <Button
				        android:id="@+id/btn_conditii_sumar"
				        android:layout_width="130dp"
				        android:layout_height="41dp"
				        android:background="@drawable/conditii_asigurare_sumar"
				        android:paddingLeft="45dp"
				        android:layout_marginTop="2dp"
				        android:text="@string/i170"
				        android:textColor="@color/ColorTitlu"
				        android:textSize="12sp" />
				</LinearLayout>

            </RelativeLayout>
            
			<View
       			android:layout_width="match_parent"
        		android:layout_height="1dp"
        		android:layout_marginTop="5dp"
        		android:background="#C9C9C9" />
			
			<Button
		        android:id="@+id/btn_continua"
		        android:layout_width="200dp"
		        android:layout_gravity="center"
		        android:layout_height="60dp"
		        android:background="@drawable/calculeaza_locuinta"
		        android:text="@string/i17" 
		        android:textStyle="bold"
		        android:layout_marginTop="5dp"
		        android:paddingLeft="40dp"
		        android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>