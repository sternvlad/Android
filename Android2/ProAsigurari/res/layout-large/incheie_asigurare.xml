<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<RelativeLayout
    android:layout_width="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginTop="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="0dp"
        android:layout_above="@+id/main_bottom"
        android:layout_below="@+id/main_top">

             <RelativeLayout
          android:id="@+id/asigurare"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/description"
                android:src="@drawable/header_ecran_incheie_asigurare" />

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_toLeftOf="@+id/imageView1" >
            
            <TextView
                android:id="@+id/text_header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/i700"
                android:textColor="@color/ColorTitlu"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/text_header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i701"
                android:textColor="@color/verde"
                android:textSize="35sp" />
            
            </LinearLayout>

            <TextView
                android:id="@+id/text_header3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lay1"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_toLeftOf="@+id/imageView1"
                android:text="@string/i702"
                android:textColor="@color/MenuLightGrey"
                android:textSize="20sp" />
        </RelativeLayout>
            
            
   	       <View
   	    android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/asigurare"
        android:background="#C9C9C9" />

   	       
     <TableLayout
         		android:layout_marginTop="15dp"
   	           android:layout_width="fill_parent"
   	           android:layout_height="wrap_content"
   	           android:gravity="center_horizontal"
   	           android:layout_centerHorizontal="true"
   	           android:layout_below="@+id/view">
   	       
   	       <TableRow
   	           android:layout_width="fill_parent"
   	           android:gravity="center_horizontal"
   	           android:layout_height="wrap_content"
   	           android:layout_centerHorizontal="true">



   	           <Button
   	               android:id="@+id/asigurare_rca"
   	               android:layout_marginLeft="27dp"
   	               android:layout_width="166dp"
   	               android:layout_height="163dp"
   	               android:background="@drawable/asig_rca" />

   	           
   	           <Button
   	               android:id="@+id/asigurare_casco"
   	               android:layout_width="166dp"
   	               android:layout_marginLeft="15dp"
   	               android:layout_marginRight="25dp"
   	               android:layout_height="163dp"
   	               android:background="@drawable/asig_casco" />
   	       </TableRow>
   	       
   	          	       <TableRow
   	           android:layout_marginTop="15dp"	
   	           android:layout_width="fill_parent"
   	           android:gravity="center_horizontal"
   	           android:layout_centerHorizontal="true"
   	           android:layout_height="wrap_content">

   	           <Button
   	               android:id="@+id/asigurare_calatorie"
   	               android:layout_width="166dp"
   	               android:layout_height="163dp"
   	               android:layout_marginLeft="27dp"
   	               android:background="@drawable/asig_calatorie" />
   	           
   	           <Button
   	               android:id="@+id/asigurare_locuinta"
   	               android:layout_width="166dp"
   	               android:layout_height="163dp"
   	               android:layout_marginLeft="15dp"
   	               android:layout_marginRight="25dp"
   	               android:background="@drawable/asig_locuinte" />
   	       </TableRow>
   	       

   	       <TableRow
   	           android:layout_width="150dp"
   	           android:layout_height="wrap_content"
   	           android:gravity="center_horizontal" >
   	       
   	     <ImageView
   	     android:id="@+id/imageView1"
   	     android:layout_width="150dp"
   	     android:layout_marginTop="5dp"
   	     android:layout_gravity="center"
   	     android:layout_height="wrap_content" 
   	     android:src="@drawable/logo_123" />
   	     </TableRow>
   	       
   	       </TableLayout>
   	       




        </RelativeLayout>
    

    <ImageView
        android:id="@+id/tooltip_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_top"
        android:layout_alignParentLeft="true"
        android:src="@drawable/tooltip_profil"
        android:background="@drawable/image_tooltip"
        android:paddingTop="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textTooltip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tooltip_prof"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:text="" />

</RelativeLayout>
</ScrollView>