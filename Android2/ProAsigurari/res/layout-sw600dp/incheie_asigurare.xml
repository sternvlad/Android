<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E0EBEB" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal" >

            <RelativeLayout
                android:id="@+id/asigurare"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:contentDescription="@string/description"
                    android:src="@drawable/header_ecran_incheie_asigurare" />

                <LinearLayout
                    android:id="@+id/lay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/text_header1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/i700"
                        android:textColor="@color/ColorTitlu"
                        android:textSize="45sp" />

                    <TextView
                        android:id="@+id/text_header2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/i701"
                        android:textColor="@color/verde"
                        android:textSize="45sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_header3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/lay1"
                    android:layout_marginBottom="5dp"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:gravity="center"
                    android:text="@string/i702"
                    android:textColor="@color/MenuLightGrey"
                    android:textSize="23sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/asigurare"
                android:background="#C9C9C9" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal" >

                    <Button
                        android:id="@+id/asigurare_rca"
                        android:layout_width="200dp"
                        android:layout_height="244dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/asig_rca" />
                </TableRow>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/asigurare"
                    android:layout_marginTop="10dp"
                    android:background="#C9C9C9" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal" >

                    <Button
                        android:id="@+id/asigurare_calatorie"
                        android:layout_width="250dp"
                        android:layout_height="244dp"
                        android:layout_marginLeft="27dp"
                        android:background="@drawable/asig_calatorie" />

                    <Button
                        android:id="@+id/asigurare_locuinta"
                        android:layout_width="250dp"
                        android:layout_height="244dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/asig_locuinte" />
                </TableRow>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Calculeaza tarifele de asigurare introducand corect datale personale pentru a obtine tariful."
                    android:textColor="#5a7ca1"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:paddingBottom="150dp"
                    android:layout_marginRight="10dp"
                    android:typeface="serif" />
            </TableLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/tooltip_prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/image_tooltip"
            android:contentDescription="@string/description"
            android:paddingTop="0dp"
            android:src="@drawable/tooltip_profil"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textTooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/tooltip_prof"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:text="" />
    </RelativeLayout>

</ScrollView>