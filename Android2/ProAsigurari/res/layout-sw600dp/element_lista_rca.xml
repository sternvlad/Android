
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textListTopElem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/MenuDarkGrey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textListElem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textListTopElem"
            android:layout_below="@+id/textListTopElem"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="@color/MenuLightGrey"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/linear"
            android:layout_width="166dp"
            android:layout_height="64dp"
            android:contentDescription="@string/description"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/adauga_in_cos"
            android:clickable="false"
            android:paddingLeft="25dp"
            android:layout_marginRight="5dp" />
            


           	    <ImageView
           	        android:id="@+id/img_companie"
           			android:layout_width="200dp"
           			android:layout_height="76dp"
           			android:contentDescription="@string/description"
           	        android:layout_centerVertical="true"
           	        android:layout_marginLeft="5dp"
           	        android:src="@drawable/omniasig" />

           	    <TextView
           	        android:id="@+id/pret_rca"
           	        android:layout_width="200dp"
           	        android:layout_height="wrap_content"
           	        android:layout_centerHorizontal="true"
           	        android:gravity="center"
           	        android:textSize="27sp"
           	        android:textStyle="bold"/>

           	    <TextView
           	        android:id="@+id/clasa_bm"
           	        android:layout_width="wrap_content"
           	        android:layout_height="wrap_content"
           	        android:layout_alignLeft="@+id/pret_rca"
           	        android:layout_centerVertical="true"
           	        android:layout_toLeftOf="@+id/linear"
           	        android:gravity="center"
           	        android:paddingTop="20dp"
           	        android:textColor="@color/MenuLightGrey"
           	        android:textSize="20sp" />
           	        
