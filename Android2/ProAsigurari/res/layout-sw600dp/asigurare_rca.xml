
  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/scrollview_rca"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_above="@+id/main_bottom"
     android:layout_below="@+id/main_top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp" >
            
                          <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="@color/verde" />
            


            <RelativeLayout
          android:id="@+id/asigurare"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/description"
                android:src="@drawable/asig_rca" />

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingLeft="70dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/imageView1"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_header2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/i759"
                    android:textColor="@color/MenuLightGrey"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/text_header3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="@string/i760"
                    android:textColor="@color/MenuLightGrey"
                    android:textSize="23sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lay1"
                android:layout_alignLeft="@+id/lay1"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="@string/i758"
                android:textColor="@color/verde"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>
        
               <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="@color/verde" />
            
            <RelativeLayout
                android:id="@+id/alege_masina_rca_lay"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="100dp"
                android:layout_width="wrap_content"
                android:background="@drawable/alege_masina_verde">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/description"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="20dp"
                    android:src="@drawable/icon_foto" />


                <TextView
                    android:id="@+id/alege_masina_rca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView1"
                    android:layout_marginLeft="5dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/i147"
                    android:textColor="@color/MenuDarkGrey"
                    android:textSize="27sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_alignParentTop="true"
                    android:text="@string/i158"
                    android:textSize="15sp" />
                
            </RelativeLayout>
            
            <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#C9C9C9" />
            
            
             <RelativeLayout
                android:id="@+id/alege_persoana_rca_lay"
                android:orientation="horizontal"
                android:layout_height="100dp"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:background="@drawable/alege_masina_verde">

                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/description"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="20dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/icon_foto_person" />


                <TextView
                    android:id="@+id/alege_persoana_rca"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/TextView01"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/imageView0"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/i148"
                    android:textColor="@color/ColorTitlu"
                    android:textSize="27sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/i149"
                    android:textSize="15sp" />
                
            </RelativeLayout>   
            
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#C9C9C9" />
        
           <TextView
            android:id="@+id/textCodCaen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/i64"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/edtCodCaen"
            android:background="@drawable/edit_text"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:inputType="text"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textColor="@color/ColorTitlu"
            android:textSize="27sp" />
            
        
        <TextView
            android:id="@+id/textReduceri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/i156"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="20sp" />

        <RelativeLayout
            android:id = "@+id/layout_reduceri"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edt_reduceri"
            android:background="@color/transparent"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:hint="@string/i157"
            android:textColor="@color/ColorTitlu"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:contentDescription="@string/description"
            android:layout_alignParentRight="true"
            android:src="@drawable/list_arrow" />
           
        </RelativeLayout>
        
         <View
             android:id="@+id/viewCasco"
 			android:layout_width="match_parent"
 			android:layout_height="1dp"
 			android:background="#C9C9C9" /> 
           
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/i152"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="20sp" />

        
        <RadioGroup
            android:id="@+id/radioCASCO_rca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="5dp" >
            
        <RadioButton 
            android:id="@+id/radio_1_rca"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:button="@color/transparent"
            android:text="@string/i153"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="16sp"
            android:background="@drawable/button_radio_masina"/>

        <RadioButton
            android:id="@+id/radio_2_rca"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_radio_masina"
            android:button="@color/transparent"
            android:gravity="center"
            android:text="@string/i154"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="16sp" />
        
         <RadioButton 
            android:id="@+id/radio_3_rca"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center" 
            android:button="@color/transparent"
            android:text="@string/i154"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="16sp"
            android:background="@drawable/button_radio_masina"/>


         <Button
             android:id="@+id/alteleCASCO_rca"
             android:paddingTop="5dp"
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_marginTop="4dp"
             android:background="@drawable/altele_button" />

        </RadioGroup>
        
       
        <View
 			android:layout_width="match_parent"
 			android:layout_height="1dp"
 			android:background="#C9C9C9" /> 
 			
        <TextView
            android:id="@+id/data_inceput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/i127"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="20sp" />
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

         <EditText
                android:id="@+id/edtDataInceput"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/transparent"
                android:gravity="left"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/ColorTitlu"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="27sp"
                android:textStyle="bold" />

         <Button
             android:id="@+id/data_inceput_minus"
             android:layout_width="90dp"
             android:layout_marginLeft="80dp"
             android:layout_height="45dp"
             android:layout_marginBottom="10dp"
             android:background="@drawable/minus" />
         <Button
             android:id="@+id/data_inceput_plus"
             android:layout_width="90dp"
             android:layout_marginLeft="0dp"
             android:layout_height="45dp"
             android:layout_marginBottom="1dp"
             android:background="@drawable/plus" />

         </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#C9C9C9" />
            
            
            <Button
		        android:id="@+id/calculeaza_rca"
		        android:layout_width="300dp"
		        android:layout_gravity="center"
		        android:layout_height="90dp"
		        android:background="@drawable/calculeaza_rca"
		        android:text="@string/i128" 
		        android:textStyle="bold"
		        android:layout_marginTop="15dp"
		        android:paddingLeft="80dp"
		        android:textSize="26sp"/>
        

             

        </LinearLayout>
        
        
          </ScrollView>