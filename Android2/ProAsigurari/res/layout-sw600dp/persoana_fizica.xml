
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<LinearLayout
        android:id="@+id/main_center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" >
                <LinearLayout
                    android:id="@+id/niciunid"
			    android:focusable="true" 
			    android:focusableInTouchMode="true"
			    android:orientation="horizontal"
			    android:layout_width="0dip" 
			    android:layout_height="0dip"/>
        <TextView
            android:id="@+id/textNumeAltePers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/i54"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/edtNumeAltePers"
            android:layout_width="match_parent"
            android:textColor="@color/ColorTitlu"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/edit_text"
            android:gravity="left"
            android:inputType="textCapWords"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textSize="27sp" />
        

        	<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="1dp"
		        android:gravity="left"
		        android:paddingLeft="5dp"
		        android:paddingTop="5dp"
			    android:orientation="horizontal" >
	    
      <TextView
            android:id="@+id/textCNPAltePers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i56"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="20sp" />

        

	    <ImageView
	        android:id="@+id/wrong_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:visibility="gone"
	        android:contentDescription="@string/description"
	        android:src="@drawable/exclamare_atentionare" />
	</RelativeLayout>
	
      <EditText
            android:id="@+id/edtCNPAltePers"
            android:background="@drawable/edit_text"
            android:paddingTop="5dp"
            android:textColor="@color/ColorTitlu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:maxLength="25"
            android:inputType="number|textCapWords"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textSize="27sp" />


        
        <TextView
            android:id="@+id/textJudLocAltePers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/i60"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/edtJudLocAltePers"
            android:background="@drawable/edit_text"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="@color/ColorTitlu"
            android:paddingLeft="5dp"
            android:textSize="27sp" />
        
        <TextView
            android:id="@+id/textAdresaAltePers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/i62"
            android:textColor="@color/MenuDarkGrey"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/edtAdresaAltePers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/edit_text"
            android:gravity="left"
            android:textColor="@color/ColorTitlu"
            android:textStyle="bold"
            android:inputType="textCapWords"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textSize="27sp" />
        
         			<TextView
                        android:id="@+id/textSerieAltePers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/i59"
                        android:textColor="@color/MenuDarkGrey"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edtSerieAltePers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/edit_text"
                        android:gravity="left"
                        android:inputType="textCapCharacters"
                        android:lines="1"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/ColorTitlu"
                        android:textSize="27sp"
                        android:textStyle="bold" />
        
		<RelativeLayout 
                android:layout_width="fill_parent"
                android:paddingTop="15dp"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/renuntaAltePers"
                     android:layout_width="240dp"
	                android:layout_height="85dp"
	                android:background="@drawable/button_renunta"
	                android:paddingLeft="30dp"
	                android:text="@string/i66"
	                android:layout_marginLeft="15dp"
	                android:textColor="@color/MenuLightGrey"
	                android:textSize="23sp"
	                android:textStyle="bold" >
                </Button>

                <Button
                    android:id="@+id/salveazaAltePers"
                    android:layout_width="240dp"
	                android:layout_height="85dp"
	                android:layout_alignParentRight="true"
	                android:layout_alignParentTop="true"
	                android:background="@drawable/button_salveaza"
	                android:paddingLeft="40dp"
	                android:layout_marginRight="15dp"
	                android:text="@string/i67"
	                android:textColor="@color/MenuLightGrey"
	                android:textSize="23sp"
	                android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>
        </ScrollView>