		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/main_center"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_above="@+id/main_bottom"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:paddingLeft="10dp"
	    android:paddingRight="5dp" >

		<RelativeLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >

		    <Button
		        android:id="@+id/adauga_masina"
		        android:layout_width="wrap_content"
		        android:layout_height="120dp"
		        android:textStyle="bold"
		        android:paddingLeft="125dp"
		        android:background="@drawable/adauga_masina_noua"
		        android:text="@string/i266" 
		        android:textSize="25sp"/>



		</RelativeLayout>
		
		    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C9C9C9" />
	    	
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
		<ImageView
		    android:id="@+id/iv_zero_masini"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:visibility="gone"
		    android:contentDescription="@string/description"
		    android:gravity="center"
		    android:src="@drawable/zero_masini" />

		<TextView
		    android:id="@+id/tv_zero_masini"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:gravity="center"
		    android:visibility="gone"		    
		    android:text="@string/i173"
		    android:textSize="30sp" />

		</RelativeLayout>
	    	
		<ListView
	    	android:id="@+id/android:list"
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:choiceMode="singleChoice"
	    	android:divider="@drawable/divider"
	    	android:dividerHeight="2dp"
	    	android:clickable="true"
	    	android:typeface="sans">
    	</ListView>
	</LinearLayout>