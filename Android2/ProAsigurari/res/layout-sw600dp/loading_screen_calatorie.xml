
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_above="@+id/main_bottom"
    android:layout_below="@+id/main_top"
    android:orientation="vertical" >

        <ImageView
            android:id="@+id/loading_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:contentDescription="@string/description"
            android:layout_centerHorizontal="true"
            android:src="@drawable/loading_calatorie1" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/loading_img"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/arrow_2"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_rosu" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/i73"
                android:textColor="@color/albastruInchis"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_arrow"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description"
                android:src="@drawable/arrow_rosu" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/i74"
                android:textColor="@color/albastruInchis"
                android:textSize="30sp" />
            
        </LinearLayout>
        
                <LinearLayout
            android:id="@+id/locuinta_text3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_arrow2"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:contentDescription="@string/description"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_rosu" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/i75"
                android:textColor="@color/albastruInchis"
                android:textSize="30sp" />
            
            </LinearLayout>

                <TextView
                    android:id="@+id/text_cauta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="168dp"
                    android:gravity="center"
                    android:text="@string/i176"
                    android:textSize="25sp"
                    android:textStyle="bold" />

    </RelativeLayout>