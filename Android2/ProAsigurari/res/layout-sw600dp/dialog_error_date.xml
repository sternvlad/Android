
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_generic" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/description"
            android:src="@drawable/logo_img" />
    
    <TextView
        android:id="@+id/text_titlu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i123"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textSize="27sp"
        android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_eroare_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/i797"
        android:textColor="@color/rosu_termeni"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/text_error"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/i125"
        android:textColor="#000000"
        android:textSize="18sp" />

    		<TextView
                android:id="@+id/text_bottom_thanks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:text="@string/i798"
                android:textColor="@color/MenuLightGrey"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_ok"
                android:layout_width="105dp"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/ok_rca"
                android:text="OK" />

</LinearLayout>