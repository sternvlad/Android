
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/popup_generic_inalt"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:contentDescription="@string/description"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_img" />

        <TextView
            android:id="@+id/text_titlu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:text="@string/i22"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/android:list"
        android:layout_width="wrap_content"
        android:layout_height="750dp"
        android:layout_marginTop="125dp"
        android:choiceMode="none"
        android:layout_marginBottom="145dp"
        android:divider="@drawable/divider"
        android:dividerHeight="2dp"
        android:focusable="false"
        android:typeface="sans" >
    </ListView>

    <LinearLayout
        android:id="@+id/text_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_zeronot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/i220"
            android:textColor="@color/ColorTitlu"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_zeronot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/i40"
            android:textColor="@color/ColorTitlu"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:id="@+id/ok_button_notificari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/android:list"
        android:background="@drawable/ok_button_rca"
        android:text="@string/i39"
        android:textSize="25sp" />

</RelativeLayout>